#Peça uma senha e valide qe ela tenha:
#pelo menos 8 caracteres, pelo menos 1 letra maiúscula, pelo menos 1 letra minuscula, pelo menos 1 número:

senha = input("Digite uma senha: ")

caracteres = len(senha) >= 8
letras_maiuscula = False
letras_minuscula = False
numeros = False

for x in senha:
    if x.isupper():
        letras_maiuscula = True
    if x.islower():
        letras_minuscula = True
    if x.isdigit():
        numeros = True

if caracteres and letras_maiuscula and letras_minuscula and numeros:
    print("Senha válida!")
else:
    print("Senha inválida. Verifique os requisitos:")
    if not caracteres:
        print("A senha deve ter pelo menos 8 caracteres.")
    if not letras_maiuscula:
        print("A senha deve ter pelo menos 1 letra maiúscula.")
    if not letras_minuscula:
        print("A senha deve ter pelo menos 1 letra minúscula.")
    if not numeros:
        print("A senha deve ter pelo menos 1 número.")